<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="exercise1.StudentInfoController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="4" vgap="4"
          style="-fx-padding: 0">

    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
    </columnConstraints>

    <!-- Row 1 -->
    <Label fx:id="nameLbl" text="Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameTf" promptText="Full name"
            GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
          GridPane.columnIndex="3" GridPane.rowIndex="0">
        <RadioButton fx:id="compSciRdo" text="Computer Science" selected="true" onAction="#onCompSciRdoClicked"/>
        <RadioButton fx:id="busRdo" text="Business" onAction="#onBusRdoClicked"/>
    </HBox>

    <!-- Row 2 -->
    <Label fx:id="addressLbl" text="Address:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="addressTf" promptText="No. / Street / Road"
               GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <CheckBox fx:id="studentCouncilCbx" text="Student Council"
              GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <VBox alignment="CENTER" xmlns="http://javafx.com/fxml"
          GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.rowSpan="6">
        <ComboBox fx:id="coursesCbx" maxWidth="Infinity" minHeight="50" onAction="#onCoursesCbxChanged"/>
        <ListView fx:id="courseSelectListView" maxWidth="Infinity" maxHeight="200" />
    </VBox>

    <!-- Row 3 -->
    <Label fx:id="provinceLbl" text="Province:"
           GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="provinceTf" promptText="e.g. ON"
               GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Row 4 -->
    <Label fx:id="cityLbl" text="City:"
           GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="cityTf" promptText="e.g. Toronto"
               GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- Row 5 -->
    <Label fx:id="postalCodeLbl" text="Postal Code:"
           GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="postalCodeTf" promptText="e.g. M1G 3T8"
               GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <!-- Row 6 -->
    <Label fx:id="phoneLbl" text="Phone Number:"
           GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="phoneTf" promptText="e.g. (416) 222-3434"
               GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <CheckBox fx:id="volunteerWorkCbx" text="Volunteer Work"
              GridPane.columnIndex="2" GridPane.rowIndex="5" />

    <!-- Row 7 -->
    <Label fx:id="emailLbl" text="Email:"
           GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="emailTf" promptText="e.g. john@doe.com"
               GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <!-- Row 8 -->
    <Button fx:id="submitBtn" text="Display"  onAction="#onDisplayButtonClick"
            GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="4" GridPane.halignment="CENTER" />

    <!-- Row 9 -->
    <TextArea fx:id="resultTxa" editable="false" maxWidth="Infinity" minHeight="40"
              GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="4"/>


</GridPane>
